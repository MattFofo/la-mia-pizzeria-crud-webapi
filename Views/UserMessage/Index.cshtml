@model List<UserMessage>


<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-4">
            <h1 class="contrast-text text-center">Messaggi ricevuti</h1>
        </div>


        @if (Model.Count == 0)
        {
            <h2>Non ci sono messaggi</h2>
        }
        else
        {
            <table class="table caption-top table-user-messages">
                <thead>
                    <tr>
                        <td>Email</td>
                        <td>Title</td>
                        <td>Text</td>
                        <td>Azioni</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (UserMessage message in Model)
                        {   
                            <tr>
                                <td>@message.Email</td>
                                <td>@message.Title</td>
                                <td>@message.Text</td>
                                <td>
                                    @using (Html.BeginForm(FormMethod.Post, new { @class = "d-inline-block" })) 
                                    {
                                        <button class="btn btn-danger" onclick="return confirm('Are you sure?')" asp-controller="UserMessage" asp-action="Delete" asp-route-id="@message.Id">
                                            <i class="fa-solid fa-trash-can-arrow-up"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }

    </div>
</div>