@model List<Pizza>


<div class="container" >
        <div class="row g-3 justify-content-center py-4 row-cols-lg-2 row-cols-md-2 row-cols-sm-1" id="jsContainer">

        </div>
    </div>
</div>

<script type="text/javascript">

    const jsCont = document.getElementById("jsContainer");
    let pizzas = [];
    axios.get("/api/pizzas").then(res => {

        pizzas = res.data;

        pizzas.forEach(pizza => {
            console.log(pizza);
            if (pizza.name == "Margherita" || pizza.name == "Capricciosa" || pizza.name == "Colombo" || pizza.name == "Inverno"){

                jsCont.innerHTML += `
                    <div class="card mb-3">
                        <div class="row">
                            <div class="col">
                                <img src="${pizza.image}" class="img-fluid rounded-start" alt="${pizza.name}">
                            </div>
                            <div class="col">
                                <div class="card-body">
                                    <h5 class="card-title">${pizza.name}</h5>
                                    <p class="card-text">${pizza.description}</p>
                                    <p class="card-text"><small class="text-muted">${pizza.price} &euro;</small></p>
                                </div>
                            </div>
                        </div>
                        <a href="Pizza/Details/${pizza.id}" class="btn btn-primary">Dettagli</a>
                    </div>
                `;
            }
        })

    }).catch(err => {

        console.log("failed" + err);
    })
</script>